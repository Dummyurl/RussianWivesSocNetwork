<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.borisruzanov.russianwives.ui.slider.SliderWillingKidsFragment">

    <TextView
        android:id="@+id/fragment_slider_willingkids_tv_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="36dp"
        android:text="@string/do_you_want_children"
        android:textColor="@color/darkGrey"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/fragment_slider_willingkids_linear_tvs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_slider_willingkids_tv_question"
        android:layout_marginHorizontal="16dp"
        android:gravity="center"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/fragment_slider_willingkids_radiogroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_slider_bodytype_tv_question"
            android:layout_marginHorizontal="16dp"
            android:gravity="center"
            android:orientation="vertical">

        <RadioButton
            android:id="@+id/fragment_slider_willingkids_rbtn_definitely"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/definitely"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/fragment_slider_willingkids_rbtn_someday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/someday"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/fragment_slider_willingkids_rbtn_not_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/not_sure"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/fragment_slider_willingkids_rbtn_probably"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/probably_not"
            android:textSize="20sp" />
        <RadioButton
            android:id="@+id/fragment_slider_willingkids_rbtn_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/no"
            android:textSize="20sp" />
        <RadioButton
            android:id="@+id/fragment_slider_willingkids_rbtn_no_but_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/no_but_its_ok_if_partner_has_kids"
            android:textSize="20sp" />
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/fragment_slider_willingkids_btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_slider_willingkids_linear_tvs"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/save"
        android:textColor="@android:color/white" />


</RelativeLayout>
