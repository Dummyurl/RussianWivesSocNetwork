<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.borisruzanov.russianwives.ui.slider.SliderHeightFragment">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/fragment_slider_height_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/fragment_slider_height_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        </android.support.v7.widget.Toolbar>



    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/fragment_slider_height_tv_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_slider_height_appbar"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="36dp"
        android:layout_marginHorizontal="16dp"
        android:text="@string/what_is_your_height"
        android:textSize="24sp"
        android:textColor="@color/darkGrey"/>

    <LinearLayout
        android:id="@+id/fragment_slider_height_linear_tvs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_slider_height_tv_question"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/fragment_slider_height_tv_number"
            style="@style/FlatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textColor="@color/darkGrey"
            android:textSize="34sp"
            />

        <TextView
            android:id="@+id/fragment_slider_height_tv_cm"
            style="@style/FlatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cm"
            android:textColor="@color/darkGrey"
            android:textSize="34sp"
            />


    </LinearLayout>

    <Button
        android:id="@+id/fragment_slider_height_btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_slider_height_linear_tvs"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="36dp"
        android:layout_marginVertical="36dp"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/edit"
        android:textColor="@android:color/white" />



    <LinearLayout
        android:id="@+id/fragment_slider_height_linear_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_slider_height_btn_edit"
        android:orientation="horizontal"
        android:gravity="center">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/fragment_slider_height_btn_close"
            style="@style/FlatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:textColor="@color/darkGrey"
            android:textSize="12sp"
            android:layout_marginRight="16dp"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/fragment_slider_height_btn_next"
            style="@style/FlatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textColor="@color/darkGrey"
            android:textSize="12sp"
            android:layout_marginLeft="16dp"/>


    </LinearLayout>


</RelativeLayout>
