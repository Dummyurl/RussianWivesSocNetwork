<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.borisruzanov.russianwives.ui.slider.SliderImageFragment">

    <TextView
        android:id="@+id/fragment_slider_image_tv_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:layout_marginVertical="36dp"
        android:text="@string/add_photo"
        android:textSize="24sp"
        android:textColor="@color/darkGrey"/>

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fragment_slider_image_img_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_below="@+id/fragment_slider_image_tv_question"
        android:layout_centerHorizontal="true"
        android:src="@drawable/default_avatar"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />

    <Button
        android:id="@+id/fragment_slider_image_btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_slider_image_img_image"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="36dp"
        android:layout_marginVertical="36dp"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/change"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:id="@+id/fragment_slider_image_linear_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_slider_hobby_btn_save"
        android:orientation="horizontal"
        android:gravity="center">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/fragment_slider_image_btn_close"
            style="@style/FlatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:textColor="@color/darkGrey"
            android:textSize="12sp"
            android:layout_marginRight="16dp"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/fragment_slider_image_btn_next"
            style="@style/FlatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textColor="@color/darkGrey"
            android:textSize="12sp"
            android:layout_marginLeft="16dp"/>


    </LinearLayout>


</RelativeLayout>
