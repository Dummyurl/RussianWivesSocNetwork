<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.borisruzanov.russianwives.ui.slider.SliderLanguagesFragment">

    <TextView
        android:id="@+id/fragment_slider_languages_tv_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="36dp"
        android:layout_marginHorizontal="16dp"
        android:text="@string/choose_languages_you_can_talk"
        android:textSize="24sp"
        android:textColor="@color/darkGrey"/>

    <LinearLayout
        android:id="@+id/fragment_slider_languages_linear_tvs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_slider_languages_tv_question"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/fragment_slider_languages_tv_number"
            style="@style/FlatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:textColor="@color/darkGrey"
            android:textSize="34sp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/fragment_slider_languages_btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_slider_languages_linear_tvs"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="36dp"
        android:layout_marginVertical="36dp"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/add"
        android:textColor="@android:color/white" />



    <LinearLayout
        android:id="@+id/fragment_slider_languages_linear_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_slider_languages_btn_edit"
        android:orientation="horizontal"
        android:gravity="center">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/fragment_slider_languages_btn_close"
            style="@style/FlatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:textColor="@color/darkGrey"
            android:textSize="12sp"
            android:layout_marginRight="16dp"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/fragment_slider_languages_btn_next"
            style="@style/FlatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textColor="@color/darkGrey"
            android:textSize="12sp"
            android:layout_marginLeft="16dp"/>


    </LinearLayout>


</RelativeLayout>