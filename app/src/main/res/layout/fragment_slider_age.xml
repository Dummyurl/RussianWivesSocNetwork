<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragment_slider_age_tv_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="31dp"
        android:layout_marginVertical="36dp"
        android:text="How Old Are You"
        android:textColor="@color/darkGrey"
        android:textSize="24sp" />

    <RadioGroup
        android:id="@+id/fragment_slider_age_radiogroup"
        android:layout_below="@+id/fragment_slider_age_tv_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:gravity="center"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/fragment_slider_age_18_21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="18-21"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/fragment_slider_age_22_26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="22-26"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/fragment_slider_age_26_35"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="26-35"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/fragment_slider_age_36_45"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="36-45"
            android:textSize="20sp" />
        <RadioButton
            android:id="@+id/fragment_slider_age_45_plus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="45+"
            android:textSize="20sp" />
    </RadioGroup>

    <Button
        android:id="@+id/fragment_slider_age_btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_slider_age_radiogroup"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="36dp"
        android:layout_marginVertical="36dp"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/save"
        android:textColor="@android:color/white" />
</RelativeLayout>