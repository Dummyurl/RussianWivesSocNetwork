<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"></android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/fragment_slider_hobby_tv_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appBarLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="31dp"
        android:layout_marginVertical="36dp"
        android:text="@string/have_a_hobby_describe_what_do_you_like_to_do"
        android:textColor="@color/darkGrey"
        android:textSize="24sp" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/fragment_slider_hobby_et_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_slider_hobby_tv_question"
        android:layout_marginHorizontal="16dp"
        android:hint="@string/discribe_what_you_like_to_do_in_couple_words"
        android:inputType="text" />

    <Button
        android:id="@+id/fragment_slider_hobby_btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_slider_hobby_et_answer"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="36dp"
        android:layout_marginVertical="36dp"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/save"
        android:textColor="@android:color/white" />
</RelativeLayout>